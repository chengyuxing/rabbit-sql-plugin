    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.database</depends>
    <depends>com.intellij.java</depends>
    <depends>org.intellij.intelliLang</depends>

    <projectListeners>
        <listener class="com.github.chengyuxing.plugin.rabbit.sql.XqlFileChangeListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
        <listener class="com.github.chengyuxing.plugin.rabbit.sql.XqlConfigLifecycleListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="XQL"
                  implementationClass="com.github.chengyuxing.plugin.rabbit.sql.file.XqlFileType"
                  fieldName="INSTANCE"
                  language="SQL"
                  extensions="xql"/>
        <annotator language="SQL" implementationClass="com.github.chengyuxing.plugin.rabbit.sql.psi.XqlFileAnnotator"/>
        <annotator language="JAVA"
                   implementationClass="com.github.chengyuxing.plugin.rabbit.sql.psi.XqlNameAnnotator"/>
        <intentionAction>
            <className>com.github.chengyuxing.plugin.rabbit.sql.action.CopySqlDefinition</className>
        </intentionAction>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.github.chengyuxing.plugin.rabbit.sql.action.GotoSqlDefinition"/>

        <codeInsight.lineMarkerProvider language="SQL"
                                        implementationClass="com.github.chengyuxing.plugin.rabbit.sql.action.GotoJavaCallable"/>

        <psi.referenceContributor language="JAVA"
                                  implementation="com.github.chengyuxing.plugin.rabbit.sql.psi.XqlNameReferenceContributor"/>

        <completion.confidence language="JAVA" order="before javaSkipAutopopupInStrings"
                               implementationClass="com.github.chengyuxing.plugin.rabbit.sql.psi.XqlNameCompletionConfidence"/>

        <lang.documentationProvider language="JAVA"
                                    implementationClass="com.github.chengyuxing.plugin.rabbit.sql.psi.XqlQuickDoc"/>

        <iconProvider implementation="com.github.chengyuxing.plugin.rabbit.sql.psi.XqlFileManagerIconProvider"/>
    </extensions>

    <!--    <extensions defaultExtensionNs="com.intellij">-->
    <!--        <postStartupActivity implementation="com.github.chengyuxing.plugin.rabbit.sql.InitXqlConfigOnStartup"/>-->
    <!--    </extensions>-->

    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="xql-live-templates.xml"/>
        <liveTemplateContext implementation="com.github.chengyuxing.plugin.rabbit.sql.XqlContext"/>
    </extensions>

    <extensions defaultExtensionNs="org.intellij.intelliLang">
        <injectionConfig config="rabbit-sql-injections.xml"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="BALLOON" id="Rabbit-SQL Notification Group"/>
    </extensions>
</idea-plugin>